<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1,2,3,4,5,6" >

        <TableRow>

            <TextView android:text="军队" />

            <TextView android:text="运输兵" />

            <TextView android:text="侦察兵" />

            <TextView android:text="民兵" />

            <TextView android:text="枪兵" />

            <TextView android:text="刺客" />

            <TextView android:text="骠骑" />
        </TableRow>

        <TableRow>

            <TextView android:text="军队数量" />

            <TextView
                android:id="@+id/grand_council01_transport_amount"
                android:text="1" />

            <TextView
                android:id="@+id/grand_council01_scout_amount"
                android:text="2" />

            <TextView
                android:id="@+id/grand_council01_militia_amount"
                android:text="3" />

            <TextView
                android:id="@+id/grand_council01_spearman_amount"
                android:text="4" />

            <TextView
                android:id="@+id/grand_council01_assassin_amount"
                android:text="5" />

            <TextView
                android:id="@+id/grand_council01_military_general_amount"
                android:text="6" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#39B6EF" />

        <TableRow>

            <TextView android:text="军队" />

            <TextView android:text="神射手" />

            <TextView android:text="巫毒术士" />

            <TextView android:text="武士" />

            <TextView android:text="冲撞车" />

            <TextView android:text="投石车" />
        </TableRow>

        <TableRow>

            <TextView android:text="军队数量" />

            <TextView
                android:id="@+id/grand_council01_marksman_amount"
                android:text="1" />

            <TextView
                android:id="@+id/grand_council01_voodoo_man_amount"
                android:text="2" />

            <TextView
                android:id="@+id/grand_council01_warrior_amount"
                android:text="3" />

            <TextView
                android:id="@+id/grand_council01_battering_ram_amount"
                android:text="4" />

            <TextView
                android:id="@+id/grand_council01_catapult_amount"
                android:text="5" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#39B6EF" />

        <TableRow>

            <TextView android:text="军饷消耗" />

            <TextView
                android:id="@+id/txtSoldierPayAmount"
                android:text="11111111" />

            <TextView android:text="每小时" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#39B6EF" />

        <TableRow>

            <TextView android:text="侦察" />

            <TextView android:text="侦察兵" />

            <EditText
                android:id="@+id/grand_council01_dispatch_scout_amount"
                android:layout_width="30dip"
                android:layout_span="2"
                android:numeric="integer" />

            <TextView android:text="" />

            <Button
                android:id="@+id/grand_council01_btn_scout"
                style="?android:attr/buttonStyleSmall"
                android:text="侦察"
                android:textSize="13dip" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#39B6EF" />

        <TableRow>

            <TextView android:text="运输" />

            <TextView android:text="运输兵" />

            <EditText
                android:id="@+id/grand_council01_dispatch_transport_count"
                android:layout_span="2"
                android:numeric="integer" />

            <TextView android:text="" />

            <Button
                android:id="@+id/grand_council01_btn_transport"
                style="?android:attr/buttonStyleSmall"
                android:text="运输"
                android:textSize="13dip" />
        </TableRow>

        <TableRow>

            <TextView android:text="" />

            <TextView android:text="" />

            <TextView
                android:layout_span="3"
                android:text="可运输资源总量：" />

            <TextView
                android:id="@+id/grand_council01_transport_total_count"
                android:text="0" />
        </TableRow>

        <TableRow>

            <TextView android:text="" />

            <TextView android:text="木材：" />

            <EditText
                android:id="@+id/grand_council01_wood_transport_count"
                android:layout_span="2"
                android:numeric="integer" />

            <TextView android:text="" />
        </TableRow>

        <TableRow>

            <TextView android:text="" />

            <TextView android:text="粮食：" />

            <EditText
                android:id="@+id/grand_council01_food_transport_count"
                android:layout_span="2"
                android:numeric="integer" />

            <TextView android:text="" />
        </TableRow>

        <TableRow>

            <TextView android:text="" />

            <TextView android:text="玄铁：" />

            <EditText
                android:id="@+id/grand_council01_IronOre_transport_count"
                android:layout_span="2"
                android:numeric="integer" />

            <TextView android:text="" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#39B6EF" />

        <TableRow>

            <TextView android:text="自己的城堡：" />

            <Spinner
                android:id="@+id/grand_council01_spinner_castle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:textSize="13dip" />

            <TextView android:text="" />

            <TextView android:text="其他城堡：" />

            <EditText
                android:id="@+id/grand_council01_other_castle_name"
                android:layout_span="2" />
        </TableRow>
    </TableLayout>

</ScrollView>